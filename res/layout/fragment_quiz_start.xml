<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kunal.quizapp.Quiz.Quiz_start">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="#FF2874EF">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textColor="#fff"
            android:id="@+id/startTime"
            android:textSize="30sp"
            android:fontFamily="cursive"
            android:paddingLeft="77dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="#fff"
            android:id="@+id/done"
            android:textSize="30sp"
            android:fontFamily="cursive"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="01:00"
        android:gravity="center"
        android:id="@+id/timeRemaning"
        android:fontFamily="cursive"
        android:layout_gravity="center"/>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="#FF2874EF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:id="@+id/left"
            android:fontFamily="cursive"
            android:textColor="#000"
            android:gravity="center"
            android:text="0"/>

    </LinearLayout>-->


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/questions"></android.support.v7.widget.RecyclerView>



    <!--<ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:id="@+id/questions"></ListView>-->


</LinearLayout>
