<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF2874EF"
    tools:context="com.example.kunal.quizapp.Login_and_Registration.Login_">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/quiz3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="#fff"
        android:gravity="center"
        android:fontFamily="cursive"
        android:text="Knowledge always wins !!!"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/email_pass_styles"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:hint="Enter E-mail address"
            android:textColor="#FF2874EF"
            android:paddingLeft="20dp"
            android:inputType="textEmailAddress"
            android:id="@+id/user_email"
            android:textColorHint="#FF2874EF"
            android:fontFamily="cursive"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/email_pass_styles"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:hint="Enter Password"
            android:textColorHint="#FF2874EF"
            android:textColor="#FF2874EF"
            android:paddingLeft="20dp"
            android:inputType="textPassword"
            android:id="@+id/user_pass"
            android:fontFamily="cursive"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password ?"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:fontFamily="cursive"
            android:id="@+id/forgot_pass"
            android:gravity="center_horizontal"
            android:layout_marginBottom="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Registration"
                android:id="@+id/registration"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:background="@drawable/registration_button"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:background="@drawable/login_button"
                android:id="@+id/login"
                android:textSize="20dp"
                android:text="Login"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
